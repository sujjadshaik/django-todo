pipeline{
    agent{
        docker{
            image 'python:3.5.1'
            args '-u root:root'

        }
    }
    stages{
        stage('checkout'){
            steps{
                checkout scm
            }
        }
        stage('install requirements'){
            steps{
                sh 'pip3 install requirements.txt'
            }
        }
        stage('Unit testing'){
            steps{
                sh 'python3 manage.py test'
            }
        }

    }
    
}